<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context="de.ostfalia.mobile.orgelhelfer.activitys.SetupActivity">

    <TextView
        android:id="@+id/musik"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="22dp"
        android:layout_marginTop="70dp"
        android:text="Musik"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/speicherort"
        android:layout_centerVertical="true"
        android:text="Informationen"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/speicherort"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/musik"
        android:layout_below="@+id/musik"
        android:layout_marginTop="24dp"
        android:text="Speicherort" />

    <TextView
        android:id="@+id/kontakt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/info"
        android:layout_below="@+id/info"
        android:layout_marginTop="21dp"
        android:text="Kontakt" />

    <EditText
        android:id="@+id/dateipfad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/speicherort"
        android:layout_alignBottom="@+id/speicherort"
        android:layout_marginStart="29dp"
        android:layout_toEndOf="@+id/speicherort"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Dateipfad"
        android:textAppearance="@android:style/TextAppearance.Material.Small" />

    <ImageButton
        android:id="@+id/ib_dateipfad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/dateipfad"
        android:layout_marginStart="15dp"
        android:layout_toEndOf="@+id/dateipfad"
        app:srcCompat="@android:drawable/sym_contact_card" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/kontakt"
        android:layout_alignBottom="@+id/kontakt"
        android:layout_alignEnd="@+id/dateipfad"
        android:layout_marginEnd="24dp"
        android:text="Kontakt-Email" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/kontakt"
        android:layout_below="@+id/kontakt"
        android:layout_marginTop="24dp"
        android:text="Speicherplatz" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView6"
        android:layout_alignStart="@+id/textView5"
        android:text="Anzeige des genutzten Speichers" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView6"
        android:layout_below="@+id/textView6"
        android:layout_marginTop="25dp"
        android:text="Musikstücke" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView8"
        android:layout_alignStart="@+id/textView7"
        android:text="Anzahl der Musikstücke" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView8"
        android:layout_below="@+id/textView8"
        android:layout_marginTop="24dp"
        android:text="Genres" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView10"
        android:layout_alignStart="@+id/textView9"
        android:text="Anzahl der Genres" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/speicherort"
        android:layout_below="@+id/dateipfad"
        android:layout_marginTop="16dp"
        android:text="Geschwindigkeit" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView10"
        android:layout_below="@+id/textView10"
        android:layout_marginTop="24dp"
        android:text="Version" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView11"
        android:layout_alignTop="@+id/textView13"
        android:text="Anzeige der Version" />

    <SeekBar
        android:id="@+id/seekBar3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/ib_dateipfad"
        android:layout_below="@+id/textView12"
        android:layout_toEndOf="@+id/info"

        android:max="100"/>

    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/seekBar3"
        android:layout_alignEnd="@+id/textView9"
        android:text="Anzeige Geschwindigkeit" />

    <ListView
        android:id="@id/android:list"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:drawSelectorOnTop="false"
        android:scrollbars="vertical" />

</RelativeLayout>
